{ "_id": "7nqSKL2BRt3mNUEf", "name": "Leverage", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/skills/trades/academics-merchant-scribe.webp", "command": "//@id=7nqSKL2BRt3mNUEf\n//@name=Leverage\n//@img=icons/skills/trades/academics-merchant-scribe.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Leverage\",\n  description: `You know a priceless secret. The Director chooses the type of person who would value this secret—usually a member of a particular faction, such as a Higaran noble, or a type of person, such as a fence of stolen goods. When engaged in a negotiation with this type of person, you can offer this secret. If they accept, their interest increases by 3 (to a maximum of 5). You can share this secret only once.`,\n  source: \"Title\"\n});" }
{ "_id": "GqNIVmMKnQybdjPE", "name": "Rare Books", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/skills/trades/academics-merchant-scribe.webp", "command": "//@id=GqNIVmMKnQybdjPE\n//@name=Rare Books\n//@img=icons/skills/trades/academics-merchant-scribe.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Rare Books\",\n  description: `You add rare, ancient books to your collection. Whenever you undertake a research project, roll 1d6 for each dead language you know and add the total to the project roll.`,\n  source: \"Title\"\n});" }
{ "_id": "WNAtEOPzr3eZBdMk", "name": "Susurrus Codex", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/skills/trades/academics-merchant-scribe.webp", "command": "//@id=WNAtEOPzr3eZBdMk\n//@name=Susurrus Codex\n//@img=icons/skills/trades/academics-merchant-scribe.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Susurrus Codex\",\n  description: `You find a sinister book that whispers advice in a voice no one else can hear. As long as you follow the book’s advice, you gain an edge on Reason tests and take a bane on Presence tests. You can stop following the book’s advice at any time, but the book won’t speak to you for the rest of the day.`,\n  source: \"Title\"\n});" }
{ "_id": "pOCxAMGRTB7HQahy", "name": "Duck!", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/skills/trades/academics-merchant-scribe.webp", "command": "//@id=pOCxAMGRTB7HQahy\n//@name=Duck!\n//@img=icons/skills/trades/academics-merchant-scribe.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Duck!\",\n  description: `When an enemy strikes you while a second creature is flanking you, you can use a triggered action to redirect the strike against the second creature. Once you use this benefit, you can’t use it again until you earn 1 or more Victories.`,\n  source: \"Title\"\n});" }
{ "_id": "8RALVZIfX07Mklhr", "name": "Furniture Fighter", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/skills/trades/academics-merchant-scribe.webp", "command": "//@id=8RALVZIfX07Mklhr\n//@name=Furniture Fighter\n//@img=icons/skills/trades/academics-merchant-scribe.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Furniture Fighter\",\n  description: `When you use a weapon ability with an improvised weapon or a weapon that isn’t part of your kit, the ability benefits from your kit’s melee weapon damage bonus.`,\n  source: \"Title\"\n});" }
{ "_id": "feKVyBJCvulkrzOh", "name": "Headbutt", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/skills/trades/academics-merchant-scribe.webp", "command": "//@id=feKVyBJCvulkrzOh\n//@name=Headbutt\n//@img=icons/skills/trades/academics-merchant-scribe.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Headbutt\",\n  description: `While you are grabbed or restrained, your free strikes don’t take a bane when those conditions would impose one.`,\n  source: \"Title\"\n});" }
{ "_id": "8cMxkDBCg6QldwnU", "name": "If I Wanted You Dead, You’d Be Dead", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/skills/trades/academics-merchant-scribe.webp", "command": "//@id=8cMxkDBCg6QldwnU\n//@name=If I Wanted You Dead, You’d Be Dead\n//@img=icons/skills/trades/academics-merchant-scribe.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"If I Wanted You Dead, You’d Be Dead\",\n  description: `Whenever you defeat foes without killing any of them (including the foes you defeat to meet the prerequisite for this title), you gain an edge on tests during negotiations with those foes.`,\n  source: \"Title\"\n});" }
{ "_id": "5ka2rJ3Q9yPslKjO", "name": "Iron Hand in Velvet Glove", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/skills/trades/academics-merchant-scribe.webp", "command": "//@id=5ka2rJ3Q9yPslKjO\n//@name=Iron Hand in Velvet Glove\n//@img=icons/skills/trades/academics-merchant-scribe.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Iron Hand in Velvet Glove\",\n  description: `The first time during a negotiation that you make a test using the Intimidate skill and don’t make an argument that appeals to an NPC’s motivation, you don’t lower the NPC’s patience or interest no matter the outcome of the roll.`,\n  source: \"Title\"\n});" }
{ "_id": "h9FQVByaYpk8moTO", "name": "Truce!", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/skills/trades/academics-merchant-scribe.webp", "command": "//@id=h9FQVByaYpk8moTO\n//@name=Truce!\n//@img=icons/skills/trades/academics-merchant-scribe.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Truce!\",\n  description: `You have a double edge on tests made to stop combat and start a negotiation.`,\n  source: \"Title\"\n});" }
{ "_id": "jVCItWNYhzUwpMrK", "name": "Warriors’ Understanding", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/skills/trades/academics-merchant-scribe.webp", "command": "//@id=jVCItWNYhzUwpMrK\n//@name=Warriors’ Understanding\n//@img=icons/skills/trades/academics-merchant-scribe.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Warriors’ Understanding\",\n  description: `You gain an edge on Presence tests made to interact with creatures you have fought against in combat encounters.`,\n  source: \"Title\"\n});" }
{ "_id": "2XZStUFpC4dsAvzl", "name": "Discerning Shopper", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/skills/trades/academics-merchant-scribe.webp", "command": "//@id=2XZStUFpC4dsAvzl\n//@name=Discerning Shopper\n//@img=icons/skills/trades/academics-merchant-scribe.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Discerning Shopper\",\n  description: `When looking for an item prerequisite for a crafting project, you can remember meeting someone who might have the item—or at least information about it.`,\n  source: \"Title\"\n});" }
{ "_id": "px5MvwfDLJrWmj6Y", "name": "One with the Crowd", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/skills/trades/academics-merchant-scribe.webp", "command": "//@id=px5MvwfDLJrWmj6Y\n//@name=One with the Crowd\n//@img=icons/skills/trades/academics-merchant-scribe.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"One with the Crowd\",\n  description: `While you’re using one or more creatures as cover, you gain an edge on tests made to hide and sneak.`,\n  source: \"Title\"\n});" }
{ "_id": "xvDnX6ypAcu4UKOP", "name": "Street Smart", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/skills/trades/academics-merchant-scribe.webp", "command": "//@id=xvDnX6ypAcu4UKOP\n//@name=Street Smart\n//@img=icons/skills/trades/academics-merchant-scribe.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Street Smart\",\n  description: `While in a settlement, you can’t be surprised.`,\n  source: \"Title\"\n});" }
{ "_id": "XVZOK1tnvDfTqhka", "name": "Doomed", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/skills/trades/academics-merchant-scribe.webp", "command": "//@id=XVZOK1tnvDfTqhka\n//@name=Doomed\n//@img=icons/skills/trades/academics-merchant-scribe.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Doomed\",\n  description: `You aren’t destined for a meaningful death, but you still might achieve one. When you’re reduced to 0 Stamina but remain conscious, you can become doomed. If you do, you can’t regain Stamina, you automatically obtain a tier 3 outcome on tests and power rolls, and you don’t die until your Stamina reaches the negative of your Stamina maximum. At the end of the encounter, you die.`,\n  source: \"Title\"\n});" }
{ "_id": "kYzFNtSrOQgU4aT0", "name": "Close Formation", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/skills/trades/academics-merchant-scribe.webp", "command": "//@id=kYzFNtSrOQgU4aT0\n//@name=Close Formation\n//@img=icons/skills/trades/academics-merchant-scribe.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Close Formation\",\n  description: `While adjacent to two or more allies, you gain a +2 bonus to stability.`,\n  source: \"Title\"\n});" }
{ "_id": "PoL1T2uCGJOjFmRl", "name": "Rune of Alarm", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/skills/trades/academics-merchant-scribe.webp", "command": "//@id=PoL1T2uCGJOjFmRl\n//@name=Rune of Alarm\n//@img=icons/skills/trades/academics-merchant-scribe.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Rune of Alarm\",\n  description: `You can spend 10 uninterrupted minutes to inscribe a magic eye-shaped rune on a surface. The rune sheds light for 2 squares. The rune is dispelled 1 minute after it is activated or if you inscribe the rune elsewhere. The rune activates when an enemy comes within 2 squares of it. When the rune is activated, you wake up if you are nonmagically asleep, and you can perceive through the rune for 1 minute as if you were in its square.`,\n  source: \"Title\"\n});" }
{ "_id": "J6NjZu5xUytK0dGB", "name": "Stonemeld", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/skills/trades/academics-merchant-scribe.webp", "command": "//@id=J6NjZu5xUytK0dGB\n//@name=Stonemeld\n//@img=icons/skills/trades/academics-merchant-scribe.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Stonemeld\",\n  description: `While adjacent to a stone wall, you can use a maneuver to gain concealment. This concealment lasts until you leave the square or use an ability.`,\n  source: \"Title\"\n});" }
{ "_id": "TzCmQ8wbsXRodOkA", "name": "Elemental Blaster", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/skills/trades/academics-merchant-scribe.webp", "command": "//@id=TzCmQ8wbsXRodOkA\n//@name=Elemental Blaster\n//@img=icons/skills/trades/academics-merchant-scribe.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Elemental Blaster\",\n  description: `Choose a damage type to which the defeated creature had an immunity (such as fire). You have the Elementalist 1st-level Hurl Element feature, dealing the chosen damage type.`,\n  source: \"Title\"\n});" }
{ "_id": "ruOPt9LfbgH12IwC", "name": "Elemental Immunity", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/skills/trades/academics-merchant-scribe.webp", "command": "//@id=ruOPt9LfbgH12IwC\n//@name=Elemental Immunity\n//@img=icons/skills/trades/academics-merchant-scribe.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Elemental Immunity\",\n  description: `Choose a damage type to which the defeated creature had an immunity (such as fire). You have immunity to the chosen damage type equal to your highest characteristic score.`,\n  source: \"Title\"\n});" }
{ "_id": "AGmQpc10YBEr7bZj", "name": "Elemental Weapons", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/skills/trades/academics-merchant-scribe.webp", "command": "//@id=AGmQpc10YBEr7bZj\n//@name=Elemental Weapons\n//@img=icons/skills/trades/academics-merchant-scribe.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Elemental Weapons\",\n  description: `Choose a damage type to which the defeated creature had an immunity (such as fire). Whenever you use a damage-dealing weapon ability, that ability can deal damage of the chosen type instead of its usual damage type.`,\n  source: \"Title\"\n});" }
{ "_id": "PtL0Kw8BUcm9Ev3M", "name": "Academic Faction", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/skills/trades/academics-merchant-scribe.webp", "command": "//@id=PtL0Kw8BUcm9Ev3M\n//@name=Academic Faction\n//@img=icons/skills/trades/academics-merchant-scribe.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Academic Faction\",\n  description: `You gain membership in a faction. You’re regarded as a promising but untested agent, and you’re allowed to operate independently. You can be assigned tasks to further your faction’s goals, and you can expect rewards and promotion if you succeed. When engaged in a negotiation with any member of your faction, their patience increases by 2 (to a maximum of 5).</p>\n    <p>Additionally, you find a sage who can make up to three Reason tests to recall lore or make project rolls for research projects on your behalf. The sage has a +5 bonus to these tests. These project rolls take 10 minutes each and don’t need to be made during a respite. You can use this benefit only in a settlement where your faction has a presence, and once you use this benefit, you can’t use it again until you complete a task for your faction.</p>`,\n  source: \"Title\"\n});" }
{ "_id": "g0RcK3UNsdDr1oFv", "name": "Guild Faction", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/skills/trades/academics-merchant-scribe.webp", "command": "//@id=g0RcK3UNsdDr1oFv\n//@name=Guild Faction\n//@img=icons/skills/trades/academics-merchant-scribe.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Guild Faction\",\n  description: `You gain membership in a faction. You’re regarded as a promising but untested agent, and you’re allowed to operate independently. You can be assigned tasks to further your faction’s goals, and you can expect rewards and promotion if you succeed. When engaged in a negotiation with any member of your faction, their patience increases by 2 (to a maximum of 5).</p>\n    <p>Additionally, you find an expert crafter who can make up to three project rolls for crafting projects on your behalf. The crafter has a +5 bonus to these tests. These project rolls take 10 uninterrupted minutes each and don’t need to be made during a respite. You can use this benefit only in a settlement where your faction has a presence, and once you use this benefit, you can’t use it again until you complete a task for your faction.</p>`,\n  source: \"Title\"\n});" }
{ "_id": "iKR3nhE0WjL9pkJr", "name": "Martial Faction", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/skills/trades/academics-merchant-scribe.webp", "command": "//@id=iKR3nhE0WjL9pkJr\n//@name=Martial Faction\n//@img=icons/skills/trades/academics-merchant-scribe.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Martial Faction\",\n  description: `You gain membership in a faction. You’re regarded as a promising but untested agent, and you’re allowed to operate independently. You can be assigned tasks to further your faction’s goals, and you can expect rewards and promotion if you succeed. When engaged in a negotiation with any member of your faction, their patience increases by 2 (to a maximum of 5).</p>\n    <p>Additionally, you recruit up to three minions with levels no greater than your own, of a type appropriate for the faction (such as human guards). These minions follow your orders for a day. You can use this benefit only in a settlement where your faction has a presence, and once you use this benefit, you can’t use it again until you complete a task for your faction.</p>`,\n  source: \"Title\"\n});" }
{ "_id": "k3PDIsBWvmZ05egN", "name": "Spy Faction", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/skills/trades/academics-merchant-scribe.webp", "command": "//@id=k3PDIsBWvmZ05egN\n//@name=Spy Faction\n//@img=icons/skills/trades/academics-merchant-scribe.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Spy Faction\",\n  description: `You gain membership in a faction. You’re regarded as a promising but untested agent, and you’re allowed to operate independently. You can be assigned tasks to further your faction’s goals, and you can expect rewards and promotion if you succeed. When engaged in a negotiation with any member of your faction, their patience increases by 2 (to a maximum of 5).</p>\n    <p>Additionally, you find an agent who can provide you with three pieces of information about the settlement you’re in, such as the location of a hidden person, a secret entrance into a guarded area, or the negotiation motivation or pitfall of an important person. You can use this benefit only in a settlement where your faction has a presence, and once you use this benefit, you can’t use it again until you complete a task for your faction.</p>`,\n  source: \"Title\"\n});" }
{ "_id": "UDfhz4oMIPesGcyK", "name": "A New Dawn", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/skills/trades/academics-merchant-scribe.webp", "command": "//@id=UDfhz4oMIPesGcyK\n//@name=A New Dawn\n//@img=icons/skills/trades/academics-merchant-scribe.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"A New Dawn\",\n  description: `Each time you finish a respite while in a community you have saved, the party gains a hero token. This hero token disappears at the end of your next respite if it hasn’t been used.`,\n  source: \"Title\"\n});" }
{ "_id": "B71nHDW69pi2zytU", "name": "Easy Marks", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/skills/trades/academics-merchant-scribe.webp", "command": "//@id=B71nHDW69pi2zytU\n//@name=Easy Marks\n//@img=icons/skills/trades/academics-merchant-scribe.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Easy Marks\",\n  description: `You gain an edge on tests made using skills from the interpersonal and intrigue skill groups when influencing members of a community that you have saved.`,\n  source: \"Title\"\n});" }
{ "_id": "Y2X3kfmZvOJV90hw", "name": "Local Fame", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/skills/trades/academics-merchant-scribe.webp", "command": "//@id=Y2X3kfmZvOJV90hw\n//@name=Local Fame\n//@img=icons/skills/trades/academics-merchant-scribe.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Local Fame\",\n  description: `You earn 1 Renown.`,\n  source: \"Title\"\n});" }
{ "_id": "jhi8Ym1cowIbxtUg", "name": "Guess It’s the Hard Way Then", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/skills/trades/academics-merchant-scribe.webp", "command": "//@id=jhi8Ym1cowIbxtUg\n//@name=Guess It’s the Hard Way Then\n//@img=icons/skills/trades/academics-merchant-scribe.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Guess It’s the Hard Way Then\",\n  description: `When combat begins and you aren’t surprised, the first time you take damage before taking your turn, you halve that damage.`,\n  source: \"Title\"\n});" }
{ "_id": "MV9d1FrzANGcYX0k", "name": "Heedless Pursuer", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/skills/trades/academics-merchant-scribe.webp", "command": "//@id=MV9d1FrzANGcYX0k\n//@name=Heedless Pursuer\n//@img=icons/skills/trades/academics-merchant-scribe.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Heedless Pursuer\",\n  description: `Once on each of your turns, you can use a free maneuver to deal yourself 1d6 damage that can’t be reduced in any way. When you do, you ignore difficult terrain and you can increase the distance of any jump you make by 1 square, both until the end of your turn.`,\n  source: \"Title\"\n});" }
{ "_id": "xVRzB8CXOcf79TwY", "name": "Silver Shield", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/skills/trades/academics-merchant-scribe.webp", "command": "//@id=xVRzB8CXOcf79TwY\n//@name=Silver Shield\n//@img=icons/skills/trades/academics-merchant-scribe.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Silver Shield\",\n  description: `You have a badge granted to you by your organization. While you wear it, you gain the My Life for Yours feature from the censor class. When you use that ability, you can’t spend wrath unless you have the Wrath class feature.`,\n  source: \"Title\"\n});" }
{ "_id": "f3DsonXuaZbGF4Tr", "name": "Trained Tracker", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/skills/trades/academics-merchant-scribe.webp", "command": "//@id=f3DsonXuaZbGF4Tr\n//@name=Trained Tracker\n//@img=icons/skills/trades/academics-merchant-scribe.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Trained Tracker\",\n  description: `You gain an edge on tests made to track criminals.`,\n  source: \"Title\"\n});" }
{ "_id": "otxfvQazmYkSNIgX", "name": "Beast Bane", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/skills/trades/academics-merchant-scribe.webp", "command": "//@id=otxfvQazmYkSNIgX\n//@name=Beast Bane\n//@img=icons/skills/trades/academics-merchant-scribe.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Beast Bane\",\n  description: `Creatures with the Animal keyword take a bane on strikes made against you.`,\n  source: \"Title\"\n});" }
{ "_id": "eR6WBCkQHjn3D5Ym", "name": "Monster Soother", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/skills/trades/academics-merchant-scribe.webp", "command": "//@id=eR6WBCkQHjn3D5Ym\n//@name=Monster Soother\n//@img=icons/skills/trades/academics-merchant-scribe.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Monster Soother\",\n  description: `You gain an edge on tests made to calm or tame nonsapient creatures.`,\n  source: \"Title\"\n});" }
{ "_id": "CwbiyzlM7VusIYFW", "name": "Monster Trophy", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/skills/trades/academics-merchant-scribe.webp", "command": "//@id=CwbiyzlM7VusIYFW\n//@name=Monster Trophy\n//@img=icons/skills/trades/academics-merchant-scribe.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Monster Trophy\",\n  description: `You decorate your equipment with a trophy from a creature you defeated. While the trophy is visible, you gain an edge on tests made to intimidate sapient creatures.`,\n  source: \"Title\"\n});" }
{ "_id": "ROp3PrXJsdSYl1HZ", "name": "Arcane Dampening", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/skills/trades/academics-merchant-scribe.webp", "command": "//@id=ROp3PrXJsdSYl1HZ\n//@name=Arcane Dampening\n//@img=icons/skills/trades/academics-merchant-scribe.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Arcane Dampening\",\n  description: `When resisting potencies from magic abilities, your characteristic scores are considered to be 1 higher than usual.`,\n  source: \"Title\"\n});" }
