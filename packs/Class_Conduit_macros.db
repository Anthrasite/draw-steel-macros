{ "_id": "LNg3mu0KjizWZoHP", "name": "Prayer of Distance", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/magic/holy/prayer-hands-glowing-yellow.webp", "command": "//@id=LNg3mu0KjizWZoHP\n//@name=Prayer of Distance\n//@img=icons/magic/holy/prayer-hands-glowing-yellow.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Prayer of Distance\",\n  description: `Your god blesses you with the ability to stretch your divine magic farther. You have a +2 bonus to the distance of your ranged magic abilities.`,\n  source: \"Class\"\n});" }
{ "_id": "u0erXRIfazG38HdM", "name": "Prayer of Soldier’s Skill", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/magic/holy/prayer-hands-glowing-yellow.webp", "command": "//@id=u0erXRIfazG38HdM\n//@name=Prayer of Soldier’s Skill\n//@img=icons/magic/holy/prayer-hands-glowing-yellow.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Prayer of Soldier’s Skill\",\n  description: `Your god gives your mind the training of a soldier. You can wear light armor and wield light weapons effectively, even though you don’t have a kit. While you wear light armor, you gain a +3 bonus to Stamina, and that bonus increases by 3 at 4th, 7th, and 10th levels. While you wield a light weapon, you gain a +1 damage bonus with weapon abilities, including free strikes. You can use light armor treasures and light weapon treasures.<p>\n    <p>If you have a kit, you can’t take this blessing.</p>`,\n  source: \"Class\"\n});" }
{ "_id": "KvUimPkReWXZ5gpA", "name": "Prayer of Speed", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/magic/holy/prayer-hands-glowing-yellow.webp", "command": "//@id=KvUimPkReWXZ5gpA\n//@name=Prayer of Speed\n//@img=icons/magic/holy/prayer-hands-glowing-yellow.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Prayer of Speed\",\n  description: `Your god blesses your flesh and infuses it with divine quickness. You gain a +1 bonus to speed and to the distance you can shift when you take the Disengage move action.`,\n  source: \"Class\"\n});" }
{ "_id": "jqK9m1bkNgdRy7UH", "name": "Prayer of Steel", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/magic/holy/prayer-hands-glowing-yellow.webp", "command": "//@id=jqK9m1bkNgdRy7UH\n//@name=Prayer of Steel\n//@img=icons/magic/holy/prayer-hands-glowing-yellow.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Prayer of Steel\",\n  description: `Your god fills your body with the light of creation, making you harder to hurt and move. You gain a +6 bonus to Stamina, and this bonus increases by 6 at 4th, 7th, and 10th levels. Additionally, you gain a +1 bonus to stability.`,\n  source: \"Class\"\n});" }
