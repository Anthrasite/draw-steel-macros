{ "_id": "jRGWJ0Qsk1vgf98E", "name": "Stormwight", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/skills/melee/strike-axe-red.webp", "command": "//@id=jRGWJ0Qsk1vgf98E\n//@name=Stormwight\n//@img=icons/skills/melee/strike-axe-red.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Stormwight\",\n  description: `You channel your ferocity into primordial storms and can take on the form of an animal or an animal hybrid form. You have the Track skill.`,\n  source: \"Class\"\n});" }
