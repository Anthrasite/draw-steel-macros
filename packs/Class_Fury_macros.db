{ "_id": "co4glxTHNQdVJFeK", "name": "Berserker", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/skills/melee/strike-axe-red.webp", "command": "//@id=co4glxTHNQdVJFeK\n//@name=Berserker\n//@img=icons/skills/melee/strike-axe-red.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Berserker\",\n  description: `You channel your ferocity into physical might, acting as a living version of the forces that shape the world. You have the Lift skill.`,\n  source: \"Class\"\n});" }
