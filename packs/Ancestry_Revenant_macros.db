{ "_id": "E7V9ZHuOkmxi4lbt", "name": "Bloodless", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/magic/death/hand-dirt-undead-zombie.webp", "command": "//@id=E7V9ZHuOkmxi4lbt\n//@name=Bloodless\n//@img=icons/magic/death/hand-dirt-undead-zombie.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Bloodless\",\n  description: `For you, an open wound is indistinguishable from a scratch. You can’t be made bleeding even while dying.`,\n  source: \"Ancestry\"\n});" }
{ "_id": "J2jImgFvMAWC0bdO", "name": "Former Life", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/magic/death/hand-dirt-undead-zombie.webp", "command": "//@id=J2jImgFvMAWC0bdO\n//@name=Former Life\n//@img=icons/magic/death/hand-dirt-undead-zombie.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Former Life\",\n  description: `Choose the ancestry you were before you died. Your size is that ancestry’s size and your speed is 5. Unless you select one of the Previous Life traits (see below), you don’t receive any other ancestral traits from your original ancestry.`,\n  source: \"Ancestry\"\n});" }
{ "_id": "Q9ZmVPaB3M1XinHq", "name": "Previous Life: 1 Point", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/magic/death/hand-dirt-undead-zombie.webp", "command": "//@id=Q9ZmVPaB3M1XinHq\n//@name=Previous Life: 1 Point\n//@img=icons/magic/death/hand-dirt-undead-zombie.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Previous Life: 1 Point\",\n  description: `You select a purchased trait that costs 1 ancestry point from your previous ancestry. You can take this trait multiple times, selecting a different 1 point trait from your previous ancestry each time.`,\n  source: \"Ancestry\"\n});" }
{ "_id": "47DH1VoBcxXUR9wE", "name": "Previous Life: 2 Points", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/magic/death/hand-dirt-undead-zombie.webp", "command": "//@id=47DH1VoBcxXUR9wE\n//@name=Previous Life: 2 Points\n//@img=icons/magic/death/hand-dirt-undead-zombie.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Previous Life: 2 Points\",\n  description: `You select a purchased trait that costs 2 ancestry points from your previous ancestry.`,\n  source: \"Ancestry\"\n});" }
{ "_id": "wLUFTWrpzbhPkxnE", "name": "Tough But Withered", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/magic/death/hand-dirt-undead-zombie.webp", "command": "//@id=wLUFTWrpzbhPkxnE\n//@name=Tough But Withered\n//@img=icons/magic/death/hand-dirt-undead-zombie.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Tough But Withered\",\n  description: `Your undead body grants you immunity to cold, corruption, lightning, and poison damage equal to your level, but you have fire weakness 5. You can’t suffocate, and you don’t need to eat or drink to stay alive.</p>\n    <p>Additionally, when your Stamina reaches the negative of your winded value, you become inert instead of dying. You fall prone and can’t stand. You continue to observe your surroundings, but you can’t speak, take main actions, maneuvers, move actions, or triggered actions. While inert this way, if you take any fire damage, your body is destroyed and you die. Otherwise, after 12 hours, you regain Stamina equal to your recovery value.</p>`,\n  source: \"Ancestry\"\n});" }
{ "_id": "DSxRweYM3Xb2mrzJ", "name": "Undead Influence", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/magic/death/hand-dirt-undead-zombie.webp", "command": "//@id=DSxRweYM3Xb2mrzJ\n//@name=Undead Influence\n//@img=icons/magic/death/hand-dirt-undead-zombie.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Undead Influence\",\n  description: `Your supernatural gifts allow you to influence other undead. You gain an edge on Reason, Intuition, and Presence tests made to interact with undead creatures.`,\n  source: \"Ancestry\"\n});" }
{ "_id": "A8trcUXWhVqSNvaO", "name": "Detonate Sigil", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/magic/death/hand-dirt-undead-zombie.webp", "command": "//@id=A8trcUXWhVqSNvaO\n//@name=Detonate Sigil\n//@img=icons/magic/death/hand-dirt-undead-zombie.webp\nawait game.macros.getName(\"ShareAbility\").execute({\n  activeActor: actor,\n  name: \"Detonate Sigil\",\n  flavorText: \"A magic sigil you placed on a creature explodes with energy.\",\n  keywords: \"Magic, Ranged, Strike\",\n  type: \"Main action\",\n  distance: \"Ranged 10\",\n  target: \"One creature bearing your sigil\",\n  powerRollStat: \"Reason, Intuition, or Presence\",\n  tier1Effect: \"3 + R, I, or P damage; slide 1\",\n  tier2Effect: \"5 + R, I, or P damage; slide 2\",\n  tier3Effect: \"7 + R, I, or P damage; slide 3\",\n  effect: \"The sigil disappears from the creature.\"\n});" }
{ "_id": "Fm5wu4T1GSRLkN7i", "name": "Vengeance Mark", "scope": "global", "type": "script", "ownership": { "default": 0 }, "img": "icons/magic/death/hand-dirt-undead-zombie.webp", "command": "//@id=Fm5wu4T1GSRLkN7i\n//@name=Vengeance Mark\n//@img=icons/magic/death/hand-dirt-undead-zombie.webp\nawait game.macros.getName(\"ShareFeature\").execute({\n  activeActor: actor,\n  name: \"Vengeance Mark\",\n  description: `As a maneuver, you place a magic sigil on a creature within 10 squares. When you place a sigil, you decide where it appears on the creature’s body, and whether the sigil is visible to only you or to all creatures.</p>\n    <p>You always know the direction to the exact location of a creature who bears one of your sigils and is on the same world. You can have a number of active sigils equal to your level, and can remove a sigil from a creature at will (no action required). If you already have the maximum number of sigils activated and you place a new one, your oldest sigil disappears with no other effect.</p>\n    <p>Additionally, you gain the Detonate Sigil signature ability. Signature abilities can be used at will.</p>`,\n  source: \"Ancestry\"\n});" }
